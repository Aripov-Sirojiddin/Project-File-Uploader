generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model federated_credentials {
  id       Int    @id @default(autoincrement())
  user_id  String @db.VarChar(255)
  provider String @db.VarChar(255)
  subject  String @db.VarChar(255)
}

model users {
  id       Int     @id @default(autoincrement())
  name     String  @db.VarChar(255)
  email    String  @unique @db.VarChar(255)
  password String? @db.VarChar(255)
  folders  file[]
}

model file {
  id      Int      @id @default(autoincrement())
  name    String   @db.VarChar(255)
  size    Int      @db.Integer
  date    DateTime @db.Timestamp()
  type    String   @db.VarChar(255)
  
  ownerId Int
  owner   users    @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  parentId Int
  folder   file?  @relation("SubFolder", fields: [parentId], references: [id], onDelete: Cascade)
  folders  file[] @relation("SubFolder")
}
