generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model federated_credentials {
  id       String @id @default(uuid()) @db.Uuid
  user_id  String @db.VarChar(255)
  provider String @db.VarChar(255)
  subject  String @db.VarChar(255)
}

model users {
  id       String  @id @default(uuid()) @db.Uuid
  name     String  @db.VarChar(255)
  email    String  @unique @db.VarChar(255)
  password String? @db.VarChar(255)
  folders  files[]
}

model files {
  id   String   @id @default(uuid()) @db.Uuid
  name String   @db.VarChar(255)
  size Int      @db.Integer
  date DateTime @db.Timestamp()
  type String   @db.VarChar(255)

  ownerId String @db.Uuid
  owner   users  @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  parentId String? @db.Uuid
  folder   files?  @relation("SubFolder", fields: [parentId], references: [id], onDelete: Cascade)
  folders  files[] @relation("SubFolder")
}
